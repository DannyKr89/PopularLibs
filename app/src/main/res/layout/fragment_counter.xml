<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/normal16"
    tools:context=".CounterFragment">


    <TextView
        android:id="@+id/tv_first_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_counter" />

    <Button
        android:id="@+id/btn_first_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0" />

    <TextView
        android:id="@+id/tv_second_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_counter" />

    <Button
        android:id="@+id/btn_second_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0" />

    <TextView
        android:id="@+id/tv_third_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_counter" />

    <Button
        android:id="@+id/btn_third_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0" />

</LinearLayout>